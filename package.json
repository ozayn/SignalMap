{
  "name": "signalmap",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently -n web,api -c auto \"pnpm dev:web\" \"pnpm dev:api\"",
    "dev:web": "pnpm --filter web dev",
    "dev:api": "pnpm --filter api dev",
    "build": "pnpm run build:web",
    "build:web": "pnpm --filter web build",
    "start:web": "pnpm --filter web start",
    "clean": "rm -rf apps/web/.next apps/web/node_modules/.cache node_modules/.cache",
    "dev:fresh": "pnpm run clean && (lsof -ti:3000 -ti:8000 2>/dev/null | xargs kill -9 2>/dev/null || true) && pnpm dev"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@9.14.2",
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
